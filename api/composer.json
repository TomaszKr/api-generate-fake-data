{
    "name": "tomasz-kr/api-generate-fake-data",
    "description": "The project provides for the generation of fake data for testing purposes.",
    "keywords": [
        "fake data",
        "api fake data",
        "php"
    ],
    "authors": [
        {
            "name": "Tomasz KrÃ³l",
            "email": "support-api-generate-fake-data@tomaszkrol.eu",
            "homepage": "https://tomaszkrol.eu",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "support-api-generate-fake-data@tomaszkrol.eu"
    },
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=7.2.5",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "fakerphp/faker": "^1.21",
        "symfony/console": "5.4.*",
        "symfony/dotenv": "5.4.*",
        "symfony/flex": "^1.17|^2",
        "symfony/framework-bundle": "5.4.*",
        "symfony/runtime": "5.4.*",
        "symfony/yaml": "5.4.*"
    },
    "require-dev": {
        "dg/bypass-finals": "*",
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "5.4.*",
        "symfony/css-selector": "5.4.*",
        "symfony/phpunit-bridge": "^6.2",
        "symplify/easy-coding-standard": "^11.3"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Application\\": "src/Application",
            "Domain\\": "src/Domain",
            "Infrastructure\\": "src/Infrastructure"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": "bin/phpunit",
        "test-unit": "bin/phpunit --configuration phpunit.xml.dist --testsuite unit",
        "test-integration": "bin/phpunit --configuration phpunit.xml.dist --testsuite integration",
        "test-coverage": "php -dxdebug.mode=coverage bin/phpunit --coverage-html ./var/coverage",
        "ecs": "vendor/bin/ecs check src --fix && vendor/bin/ecs check tests --fix"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.4.*"
        }
    }
}
